# Environment variables example
# Copy this file to .env and update values

# Application settings
WORKERS=8
LOG_LEVEL=info

# Cache settings
CACHE_TTL=5  # seconds
CACHE_MAX_SIZE=1000

# External API settings
COINGECKO_API_KEY=
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
COINGECKO_TIMEOUT=30
COINGECKO_MAX_RETRIES=5

# Circuit breaker settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_EXPECTED_EXCEPTION=ConnectionError

# Rate limiting
RATE_LIMIT_PER_MINUTE=29
RATE_LIMIT_BURST=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8001  # Separate port for Prometheus metrics

# Security
CORS_ALLOWED_ORIGINS=["http://localhost:3000"]
API_KEY_HEADER=X-API-Key
API_KEYS=[]  # List of valid API keys if authentication is needed